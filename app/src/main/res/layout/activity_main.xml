<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#54333333"
        tools:context=".MainActivity"
        >

    <LinearLayout
            android:id="@+id/mLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低辨识度模式"
                />

        <CheckBox
                android:id="@+id/mLopProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_LOW_PROFILE"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="隐藏导航栏"
                android:layout_marginTop="20dp"
                />

        <CheckBox
                android:id="@+id/mHideNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_HIDE_NAVIGATION"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="隐藏状态栏"
                />

        <CheckBox
                android:id="@+id/mFullscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_FULLSCREEN"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="稳定布局，不会受SystemUI影响"
                />

        <CheckBox
                android:id="@+id/mLayoutStable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_LAYOUT_STABLE"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App的布局在导航栏之下"
                />

        <CheckBox
                android:id="@+id/mLayoutHideNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_LAYOUT_HIDE_NAVIGATION"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App的布局在状态栏之下"
                />

        <CheckBox
                android:id="@+id/mLayoutFullscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="和 SYSTEM_UI_FLAG_HIDE_NAVIGATION 配合使用"
                android:layout_marginTop="20dp"
                />

        <CheckBox
                android:id="@+id/mImmersive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_IMMERSIVE"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="和 SYSTEM_UI_FLAG_FULLSCREEN 和 SYSTEM_UI_FLAG_HIDE_NAVIGATION 配合使用"
                />

        <CheckBox
                android:id="@+id/mImmersiveSticky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_IMMERSIVE_STICKY"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="状态栏图标变成深色(6.0+)"
                />

        <CheckBox
                android:id="@+id/mLightStatusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_LIGHT_STATUS_BAR"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导航栏图标变成深色(8.0+)"
                />

        <CheckBox
                android:id="@+id/mLightNavBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SYSTEM_UI_FLAG_LIGHT_NAVIGATION_BAR"
                />

        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                />

        <CheckBox
                android:id="@+id/mStatusBarBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="状态栏白色背景"
                />

        <CheckBox
                android:id="@+id/mNavBarBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导航栏白色背景"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onResult"
                android:text="查看结果"
                />

    </LinearLayout>
</ScrollView>